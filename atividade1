programa
{
	
	funcao inicio()
{

		//Defina as Variaveis
		cadeia nome
		inteiro idade
		real nota1, nota2, nota3, nota4
		inteiro media

		// Coletando Dados dos Usuarios

		escreva ("Digite seu nome: ")
		leia(nome)

		escreva ("Digite sua idade: ")
		leia(idade)

		escreva ("Digite nota1: ")
		leia(nota1)

		escreva ("Digite nota2: ")
		leia(nota2)

		escreva ("Digite nota3: ")
		leia(nota3)

		escreva ("Digite nota4: ")
		leia(nota4)

		//Calcular media
		media= (nota1+nota2+nota3+nota4)/4

		// Exibindo Dados do Usuarios

		escreva ("===DADOS DO USUARIO===")
		escreva ("\nNome: ",  nome)
		escreva ("\nIdade: ", idade)
		escreva ("\nNota1: ", nota1)
		escreva ("\nNota2: ", nota2)
		escreva ("\nNota3: ", nota3)
		escreva ("\nNota4: ", nota4)
		escreva ("\nMedia: ", media)

		
		
	}
}
