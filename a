#include <stdio.h>
#include <locale.h>
int main() {
	setlocale(LC_ALL,"");
    int numeros[6];
    int pares = 0, impares = 0,i;

    printf("Digite 6 números:\n");

    // Lendo os números e armazenando no vetor
    for ( i = 0; i < 6; i++) {
        printf("Número %d: ", i + 1);
        scanf("%d", &numeros[i]);
    }

    // Contando os números pares e ímpares
    for (i = 0; i < 6; i++) {
        if (numeros[i] % 2 == 0)
            pares++;
        else
            impares++;
    }

    // Mostrando os números informados pelo usuário
    printf("\nNúmeros informados pelo usuário:\n");
    for ( i = 0; i < 6; i++) {
        printf("%d ", numeros[i]);
    }

    // Mostrando a quantidade de números pares e ímpares
    printf("\n\nQuantidade de números pares: %d\n", pares);
    printf("Quantidade de números ímpares: %d\n", impares);

    return 0;
}
